---
import Navigation from './Navigation.astro';

interface Props {
  githubUsername?: string;
  avatarSize?: number; // px
}

const { githubUsername, avatarSize = 40 } = Astro.props as Props;

const links = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/notes', label: 'Notes' },
  { href: '/about', label: 'About' },
];

const avatarUrl = `https://github.com/${githubUsername}.png?size=${avatarSize * 2}`;
---
<header class="theme-header w-full border-b border-[color:var(--line)] bg-[color:var(--bg-soft)] backdrop-blur transition-colors">
  <div class="mx-auto max-w-7xl px-4">
    <div class="flex h-14 items-center justify-between">
      <div class="flex items-center gap-3">
        <a
          href={`https://github.com/${githubUsername}`}
          class="rounded-full px-1 py-0.5 focus:outline-none focus:ring-2 focus:ring-black/40 dark:focus:ring-white/60"
          aria-label={`${githubUsername} profile`}
        >
          <img
            src={avatarUrl}
            alt={`${githubUsername} profile picture`}
            width={avatarSize}
            height={avatarSize}
            class="h-10 w-10 rounded-full object-cover ring-1 ring-[color:var(--line)]"
            loading="eager"
            decoding="async"
          />
        </a>
        <span
          class="hidden text-xs font-semibold uppercase tracking-[0.12em] text-[color:var(--muted)] sm:inline"
          data-brand-dark="Grimoire"
          data-brand-light="Tome"
        >Grimoire</span>
        <a
          href="https://opencode.ai/docs"
          class="hidden text-xs italic text-[color:var(--muted)] underline underline-offset-2 hover:text-[color:var(--text)] sm:inline"
          target="_blank"
          rel="noopener noreferrer"
        >
          Created using Opencode
        </a>
      </div>
      <div class="flex items-center gap-4">
        <Navigation links={links} />
        <button
          type="button"
          class="inline-flex items-center justify-center rounded-md border border-[color:var(--line)] bg-[color:var(--card)] px-2.5 py-1.5 text-sm font-medium text-current hover:bg-[color:var(--bg-soft)] focus:outline-none focus:ring-2 focus:ring-black/40 dark:focus:ring-white/60 active:opacity-85"
          aria-label="Toggle dark mode"
          title="Toggle theme"
          data-theme-toggle
        >
          <span class="sr-only">Toggle theme</span>
          <span class="dark:hidden">üåô</span>
          <span class="hidden dark:inline">‚òÄÔ∏è</span>
        </button>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  (function(){
    const attach = () => {
      const btn = document.querySelector('[data-theme-toggle]');
      const root = document.documentElement;
      const getTheme = () => (root.classList.contains('dark') ? 'dark' : 'light');
      if (btn && !btn.__themeWired) {
        btn.addEventListener('click', () => {
          const next = getTheme() === 'dark' ? 'light' : 'dark';
          root.classList.toggle('dark', next === 'dark');
          try { localStorage.setItem('theme', next); } catch (_) {}
        });
        btn.__themeWired = true;
      }
      // Keep the button icon in sync if theme changes externally (e.g., dev HMR)
      const observer = new MutationObserver(() => {
        const dark = root.classList.contains('dark');
        btn?.querySelector('.dark\\:hidden')?.classList.toggle('hidden', dark);
        btn?.querySelector('.dark\\:inline')?.classList.toggle('hidden', !dark);
      });
      observer.observe(root, { attributes: true, attributeFilter: ['class'] });
    };
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', attach, { once: true });
    } else {
      attach();
    }
  })();
  
</script>
