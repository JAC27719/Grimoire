---
interface Props {
  linkedinUrl?: string;
  githubUrl?: string;
  email?: string; // plain email, e.g., "you@example.com"
}

const { linkedinUrl, githubUrl, email } = Astro.props as Props;
---
<footer class="theme-footer w-full border-t border-[color:var(--line)] bg-[color:var(--bg-soft)] text-[color:var(--muted)] transition-colors">
  <div class="mx-auto max-w-7xl px-4 py-6">
    <div class="flex items-center justify-center gap-6">
      {linkedinUrl && (
        <a
          href={linkedinUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="rune-link text-sm font-semibold uppercase tracking-[0.1em]"
          aria-label="LinkedIn"
        >
          LinkedIn
        </a>
      )}
      {githubUrl && (
        <a
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="rune-link text-sm font-semibold uppercase tracking-[0.1em]"
          aria-label="GitHub"
        >
          GitHub
        </a>
      )}
      {email && (
        <a
          href={`mailto:${email}`}
          class="rune-link text-sm font-semibold uppercase tracking-[0.1em]"
          aria-label="Email"
        >
          Email
        </a>
      )}
    </div>
  </div>
</footer>
