---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const pageTitle = 'Spellbook Notes';

const dateFormatter = new Intl.DateTimeFormat('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
});

const notes = (await getCollection('notes')).sort((a, b) => {
  const featured = Number(b.data.featured) - Number(a.data.featured);
  if (featured !== 0) return featured;
  return b.data.publishedAt.getTime() - a.data.publishedAt.getTime();
});
---
<BaseLayout pageTitle={pageTitle}>
  <section class="mx-auto max-w-5xl space-y-8">
    <header class="grimoire-card hero-glow p-6 md:p-8">
      <p class="section-title">Spellbook Notes</p>
      <h2 class="mt-3 text-4xl font-semibold tracking-tight md:text-5xl">Field Notes for Practical Magic</h2>
      <p class="mt-4 max-w-3xl leading-relaxed text-[color:var(--muted)]">
        This section is where concise engineering notes will live: tactics, patterns, and debugging spells that are fast to
        read and easy to reuse.
      </p>
    </header>

    {notes.length === 0 ? (
      <div class="grimoire-card p-6">
        <p class="text-sm text-[color:var(--muted)]">No notes have been published yet.</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        {notes.map((note) => (
          <a href={`/notes/${note.slug}`} class="grimoire-card lift-on-hover block p-5">
            <p class="section-title">{note.data.domain}</p>
            <h3 class="mt-2 text-2xl font-semibold">{note.data.title}</h3>
            <p class="mt-2 text-sm leading-relaxed text-[color:var(--muted)]">{note.data.summary}</p>
            <p class="mt-4 text-xs uppercase tracking-[0.1em] text-[color:var(--muted)]">
              {dateFormatter.format(note.data.publishedAt)}
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              {note.data.tags.map((tag) => (
                <span class="sigil-badge">{tag}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    )}
  </section>
</BaseLayout>
