---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';
const pageTitle = 'About';
const profileSrc = '/headshot.jpg';
const entry = await getEntry('pages', 'about');
const { Content } = await entry.render();
---
<BaseLayout pageTitle={pageTitle}>
  <article class="mx-auto max-w-6xl px-4 py-8 md:py-12 space-y-7 md:space-y-8">
    <section class="grimoire-card p-6 md:p-8">
      <div class="flex flex-col items-center gap-6 text-center md:flex-row md:items-center md:text-left">
        <img
          src={profileSrc}
          alt="Profile photo"
          width={200}
          height={200}
          class="w-36 h-36 md:w-44 md:h-44 lg:w-48 lg:h-48 rounded-full object-cover object-[50%_30%] border-2 border-[color:var(--line)] shadow-xl shadow-black/25 dark:shadow-black/55"
          loading="lazy"
          decoding="async"
        />
        <div>
          <p class="section-title">Profile</p>
          <h2 class="mt-3 text-3xl font-semibold md:text-4xl">Justin Canedy</h2>
          <p class="mt-2 text-base text-[color:var(--muted)]">Software Engineer</p>
          <p class="mt-4 max-w-2xl leading-relaxed text-[color:var(--muted)]">
            Backend and platform-focused engineer building internal tools and systems that reduce friction and improve delivery.
          </p>
        </div>
      </div>
    </section>

    <section class="grid grid-cols-1 gap-6 lg:grid-cols-[minmax(0,1fr)_20rem]">
      <div class="grimoire-card p-6 md:p-8">
        <section class="markdown">
          <Content />
        </section>
      </div>

      <aside class="space-y-4">
        <section class="grimoire-card p-5">
          <p class="section-title">At a Glance</p>
          <dl class="mt-4 space-y-3 text-sm">
            <div>
              <dt class="font-semibold">Focus Areas</dt>
              <dd class="mt-1 text-[color:var(--muted)]">Backend development, platform enablement, system design</dd>
            </div>
            <div>
              <dt class="font-semibold">Preferred Stack</dt>
              <dd class="mt-1 text-[color:var(--muted)]">C#, .NET, SQL, TypeScript, cloud-native services</dd>
            </div>
            <div>
              <dt class="font-semibold">Collaboration Style</dt>
              <dd class="mt-1 text-[color:var(--muted)]">Technical leadership, direct communication, and mentorship</dd>
            </div>
            <div>
              <dt class="font-semibold">Autonomy</dt>
              <dd class="mt-1 text-[color:var(--muted)]">Comfortable navigating ambiguity and driving to clarity</dd>
            </div>
            <div>
              <dt class="font-semibold">Learning</dt>
              <dd class="mt-1 text-[color:var(--muted)]">Quick to pick up new technologies and expand beyond current stack</dd>
            </div>
          </dl>
        </section>

        <section class="grimoire-card p-5">
          <p class="section-title">Working Preferences</p>
          <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-[color:var(--muted)]">
            <li>Clear outcomes, ownership, and decision-making</li>
            <li>Strong design docs, crisp reviews, and predictable execution</li>
            <li>Pragmatic solutions with maintainability and extensibility in mind</li>
          </ul>
        </section>
      </aside>
    </section>

    <section class="grimoire-card p-6 md:p-7">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
          <p class="section-title">Next Step</p>
          <p class="mt-2 text-sm text-[color:var(--muted)]">Explore recent work or reach out to connect.</p>
        </div>
        <div class="flex flex-wrap gap-3">
          <a href="/projects" class="hero-glow grimoire-card rune-link px-4 py-2 font-semibold">View Projects</a>
          <a href="/notes" class="grimoire-card px-4 py-2 text-sm font-medium text-[color:var(--muted)] underline underline-offset-4 hover:text-[color:var(--text)]">Read Notes</a>
          <a href="mailto:justin.a.canedy@gmail.com" class="grimoire-card px-4 py-2 text-sm font-medium text-[color:var(--muted)] underline underline-offset-4 hover:text-[color:var(--text)]">Contact</a>
        </div>
      </div>
    </section>
  </article>
</BaseLayout>
