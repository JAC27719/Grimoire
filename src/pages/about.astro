---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';
const pageTitle = 'About';
const profileSrc = '/headshot.jpg';
const entry = await getEntry('pages', 'about');
const { Content, data } = await entry.render();
---
<BaseLayout pageTitle={pageTitle}>
  <article class="mx-auto max-w-3xl px-4 py-8 space-y-8">
    <div class="flex justify-center">
      <img
        src={profileSrc}
        alt="Profile photo"
        width={200}
        height={200}
        class="w-36 h-36 md:w-44 md:h-44 lg:w-48 lg:h-48 rounded-full object-cover object-[50%_30%] border-2 border-[color:var(--line)] shadow-xl shadow-black/25 dark:shadow-black/55"
        loading="lazy"
        decoding="async"
      />
    </div>

    <section class="markdown">
      <Content />
    </section>
  </article>
</BaseLayout>
