---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface LayoutProps {
  pageTitle: string;
  githubUsername?: string;
  linkedinUrl?: string;
  email?: string;
}

const {
  pageTitle,
  githubUsername: githubUsernameProp,
  linkedinUrl: linkedinUrlProp,
  email: emailProp,
} = Astro.props as LayoutProps;

// Centralized defaults; edit once here to apply site-wide.
const DEFAULTS = {
  githubUsername: 'JAC27719',
  linkedinUrl: 'https://www.linkedin.com/in/jac27719/',
  email: 'justin.a.canedy@gmail.com',
};

const githubUsername = githubUsernameProp ?? DEFAULTS.githubUsername;
const linkedinUrl = linkedinUrlProp ?? DEFAULTS.linkedinUrl;
const email = emailProp ?? DEFAULTS.email;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <script is:inline>
      (function() {
        try {
          const ls = localStorage.getItem('theme');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const shouldDark = ls ? ls === 'dark' : prefersDark;
          document.documentElement.classList.toggle('dark', shouldDark);
        } catch (_) {}
      })();
    </script>
    <script is:inline>
      (function() {
        const applyBrandLabels = () => {
          const dark = document.documentElement.classList.contains('dark');
          document.querySelectorAll('[data-brand-dark][data-brand-light]').forEach((el) => {
            const next = dark ? el.getAttribute('data-brand-dark') : el.getAttribute('data-brand-light');
            if (next !== null && el.textContent !== next) {
              el.textContent = next;
            }
          });
        };

        const attach = () => {
          applyBrandLabels();
          const root = document.documentElement;
          if (!root.__brandObserver) {
            const observer = new MutationObserver(() => applyBrandLabels());
            observer.observe(root, { attributes: true, attributeFilter: ['class'] });
            root.__brandObserver = observer;
          }
        };

        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', attach, { once: true });
        } else {
          attach();
        }
      })();
    </script>
  </head>
  <body class="theme-body grimoire-shell min-h-screen flex flex-col transition-colors">
    <Header githubUsername={githubUsername} />
    <main class="mx-auto max-w-7xl px-4 py-8 flex-1 w-full">
      <h1 class="sr-only">{pageTitle}</h1>
      <slot />
    </main>
    <Footer
      linkedinUrl={linkedinUrl}
      githubUrl={githubUsername ? `https://github.com/${githubUsername}` : undefined}
      email={email}
    />
  </body>
</html>
